
<div class="container mt-5">
    <h1 ><center>ORDER DETAIL</center></h1>
    <div class="row mt-3">
       
        <div class="col-md-12">
          <% if(cartitems.length){ let tot=0 %>
            <table class="table table-bordered">
                <tr>
                    <th>PRODUCT IMAGE</th>
                    <th>PRODUCT NAME</th>
                    <th>DESCRIPTION</th>
                    <th>QUANTITY</th>
                    
                    <th>PRICE</th>
                    <th>AMOUNT</th>
               
                </tr>
            <% for(var i=0;i<cartitems.length ;i++){ %>
                    <tr>
                        <%   for(var j=0;j<items.length;j++){ 
                            if(items[j].cake_id==cartitems[i].cake_id)
                            {
                        %>
                                <td><img src="<%= items[j].cake_img %>" style="width: 150px; height:150px;"></td>
                                <td><%= items[j].cake_name %></td>
                                <td><%= items[j].description %></td>
                        <% }
                      } %>
                        <!-- <td><%= cartitems[i].qty %></td> -->
                        <td><%= cartitems[i].cake_size %> </td>
                        <td><%= cartitems[i].price %></td>
                        <td><% let amt=cartitems[i].qty * cartitems[i].cake_size * cartitems[i].price; tot = tot + amt %> 
                            <%= amt %>
                        </td>
                        
                    </tr>
            <% } %>
            </table>

            <br/>
            <h3>Total Amount: &#8377; <%= tot  %>/-</h3>
           
            <br/><br/><br/><br/><br/><br/><br/>
    <% }else{ %>
            <h3>No Product Found <br/><br/><br/><br/><br/><br/><br/><br/></h3>
    <% } %>
          
        </div>
    </div>
</div>