<script>
    // JavaScript to display an alert if there's an error message
    const errorMessage = "<%= typeof errorMsg !== 'undefined' ? errorMsg : '' %>";
    if (errorMessage) {
        alert(errorMessage);
    }
</script>
<div class="container mt-5">
    <h1 class="text-center">Register</h1>
    <div class="row mt-3 justify-content-center">
        <div class="col-md-6">
            <form method="post" action="/admin/register">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" class="form-control" placeholder="Enter Username" name="username">
                </div>
                <div class="form-group">
                    <label for="Pass1">Password</label>
                    <input type="password" id="pass1" class="form-control" placeholder="Password" name="pass1">
                </div>
                <div class="form-group">
                    <label for="Pass2">Confirm Password</label>
                    <input type="password" id="confpass1" class="form-control" placeholder="Confirm Password" name="confpass1">
                </div>
                <div class="text-center">
                    <button type="submit" id="loginbuttonforselenium" value="Register" style="background-color: #ab47bc;" class="btn text-light">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
